{% extends 'layout.html.twig' %}

{% block title 'Usuarios' %}

{% block body %}

<div class="container">
	<div class="row">

    <div class="col-md-12">
      <legend>Lista de Apartamentos</legend>

      <div class="table-responsive">

        <table id="mytable" class="table table-bordred table-striped">

          <thead>
            <th>Direccion</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            

            <th>Modificar</th>
            <th>Borrar</th>
          </thead>

          <tbody>

            {% for index, a in aptos %}
            <tr>
              <td>{{ a.direccion }}</td>
              <td>{{ a.descripcion }}</td>
              <td>{{ a.precio }}</td>
              
              
              
              
  <td>
                <p data-placement="top" data-toggle="tooltip" title="Modificar">
                  <a href="{{ url('users-edit', { index: index }) }}">
                    <button class="btn btn-primary btn-xs" data-title="Modificar" >
                      <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                  </a>
                </p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Borrar">
                  <a href="{{ url('users-delete', { index: index }) }}">
                    <button class="btn btn-danger btn-xs" data-title="Borrar">
                      <i class="glyphicon glyphicon-trash"></i>
                    </button>
                  </a>
                </p>
              </td>
            </tr>
            {% endfor %}

          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}