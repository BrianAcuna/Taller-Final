{% extends 'layout.html.twig' %}

{% block title 'Editar Usuario' %}

{% block body %}

<form class="form-horizontal" method="post" action="{{ url('users-save') }}">

  <input type="hidden" name="index" value="{{ index }}">

  <fieldset>

    <!-- Titulo -->
    <legend>Agregar Apartamento</legend>
    

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Direccion</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="direccion" value="{{ user_to_edit.direccion }}"
            placeholder="" required="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Descripcion</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="descripcion" value="{{ user_to_edit.descripcion }}"
            placeholder="" required="">
      </div>
    </div>
     <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Precio</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="precio" value="{{ user_to_edit.precio }}"
            placeholder="" required="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Latitud</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="latitud" value="{{ user_to_edit.latitud }}"
            placeholder="" required="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Longitud</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="longitud" value="{{ user_to_edit.longitud }}"
            placeholder="" required="">
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Tipo</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="tipo" value="{{ user_to_edit.tipo }}"
            placeholder="" required="">
      </div>
    </div>
    
    
    <!-- Botones -->
    <div class="form-group">
      <div class="col-md-8">
        <div class="pull-right">
          <button class="btn btn-primary" type="submit">Guardar</button>
          <a href="{{ url('users-list') }}>" >
            <button class="btn btn-primary">Cancelar</button>
          </a>
        </div>
      </div>
    </div>

  </fieldset>
</form>


{% endblock %}