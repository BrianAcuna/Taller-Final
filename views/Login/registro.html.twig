<html>
<head>
<title>Registro</title>
<link
	href="{{ app.request.basepath }}/vendor/thomaspark/bootswatch/yeti/bootstrap.css"
	rel="stylesheet">

</head>
<body>

	<div class="container">
		<div id="registrobox" style="margin-top: 50px;"
			class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">Registro usuario</div>
				</div>

				<div style="padding-top: 30px" class="panel-body">

					<div style="display: none" id="registro-alert"
						class="alert alert-danger col-sm-12"></div>

					<form id="registroform" class="form-horizontal" role="form"
						method="post" action="{{ url('hacerRegistro') }}">

						

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i
								class="glyphicon glyphicon-user"></i></span> <input
								id="registro-username" type="text" class="form-control"
								name="login" placeholder="">
						</div>

						<div style="margin-bottom: 25px" class="input-group">
							<span class="input-group-addon"><i
								class="glyphicon glyphicon-lock"></i></span> <input
								id="registro-password" type="password" class="form-control"
								name="password" placeholder="">
						</div>
						<input type="checkbox" name="admin">

						<div style="margin-top: 10px" class="form-group">

							<div class="col-sm-12 controls">
								<button type="submit" id="btn-registro" class="btn btn-success">
									Registrarse</button>
							</div>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
	<script
		src="{{ app.request.basepath }}/vendor/components/jquery/jquery.js"></script>
	<script
		src="{{ app.request.basepath }}/vendor/twbs/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>